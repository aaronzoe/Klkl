@{
    Layout = "";
}

<h3>订单管理</h3>

<div class="panel panel-default">
    @*<div class="panel-heading">
        Datatables |
        <small>Chaning data</small>
    </div>*@
    <div class="panel-body">
        <div ng-controller="OrdersController as table" class="container-fluid">
            <table ng-table="table.tableParams5" class="table table-bordered table-striped">
                <tbody>
                    <tr ng-repeat="order in $data">
                        <td data-title="'订单号'" sortable="'OrderID'">{{order.OrderID}}</td>
                        <td data-title="'客户渠道'">{{order.Khqd}}</td>
                        <td data-title="'客户名称'">{{order.Khqd}}</td>
                        <td data-title="'联系人'">{{order.Khqd}}</td>
                        <td data-title="'区域'">{{order.Khqd}}</td>
                        <td data-title="'送货地址'">{{order.Khqd}}</td>
                        <td data-title="'发货状态'">{{order.Khqd}}</td>
                        <td data-title="''"><button type="button" ng-click="viewOrder(order.ID)" class="btn btn-sm btn-info" title="查看">
    <em class="fa fa-search"></em>
</button>
<button type="button" ng-click="printOrder($index)" class="btn btn-sm btn-success" title="打印">
    <em class="fa fa-print"></em>
</button>
<button type="button" ng-click="shippingOrder(order.ID)" class="btn btn-sm btn-edit" title="发货">
    <em class="fa fa-send-o"></em>
</button>
<button type="button" ng-click="checkOrder(order.ID)" class="btn btn-sm btn-warning" title="审批">
    <em class="fa fa-check-square-o"></em>
</button>
<button type="button" ng-click="removeOrder($index,order.ID)" class="btn btn-sm btn-danger" title="删除">
    <em class="fa fa-trash-o"></em>
</button></td>

                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


